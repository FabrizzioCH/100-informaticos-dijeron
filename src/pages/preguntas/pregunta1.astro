---
// Importaciones
import Layout from "../../layouts/Layout.astro";
import "../../styles/global.css";
import Pregunta from "../../components/Pregunta.astro";
import Inciso from "../../components/Inciso";
import Incisos from "../../components/Incisos.astro";
---

<Layout>
    <Pregunta texto="1. ¿Cuál de las siguientes es una consulta SQL válida?" />
    <Incisos>
        <Inciso
            client:load
            inciso="A"
            respuesta="SELECT * FROM clientes;"
            esCorrecta={true}
        />
        <Inciso
            client:load
            inciso="B"
            respuesta="INSERT INTO clientes;"
            esCorrecta={false}
        />
        <Inciso
            client:load
            inciso="C"
            respuesta="DELETE clientes;"
            esCorrecta={false}
        />
        <Inciso
            client:load
            inciso="D"
            respuesta="UPDATE clientes;"
            esCorrecta={false}
        />
    </Incisos>
    <div class="text-center mt-6">
        <a
            href="/preguntas/pregunta2"
            class="bg-blue-700 text-white text-2xl py-3 px-6 rounded-lg hover:bg-blue-500 cursor-pointer shadow-md transition"
        >
            Siguiente Pregunta
        </a>
    </div>
</Layout>
